<div class="container">
  <div class="my-5">
    <h1><%= @task.completed %></h1>
    <p><%= @task.title %></p>
  </div>
  <p><%= @task.details %></p>
  <%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</div>

